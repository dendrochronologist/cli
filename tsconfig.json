{
  "ts-node": {
    "compilerOptions": {
      "module": "CommonJS",
      // ensure coverage is mapped correctly
      "inlineSourceMap": true,
      "sourceMap": true
    }
  },
  "compilerOptions": {
    /* Visit https://aka.ms/tsconfig.json to read more about this file */
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "checkJs": true,
    "declaration": true,
    "forceConsistentCasingInFileNames": true,
    "importsNotUsedAsValues": "error",
    "isolatedModules": true,
    "lib": [
      "ES2019"
    ],
    "module": "ESNext",
    "moduleResolution": "node",
    // avoid warning about Rollup-built JS files
    "outDir": "dist",
    "skipLibCheck": true,
    "strict": true,
    "target": "ES2019",
  },
  "include": [
    "bin.js",
    "src",
    "test"
  ]
}
