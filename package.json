{
  "name": "dendrochronologist",
  "version": "0.0.0",
  "description": "A CLI for versioning and publishing npm packages in a monorepo",
  "author": "Daniel Stockman",
  "license": "Parity-7.0.0",
  "homepage": "https://github.com/dendrochronologist/cli#readme",
  "keywords": [
    "monorepo",
    "version",
    "publish",
    "cli"
  ],
  "bugs": {
    "url": "https://github.com/dendrochronologist/cli/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/dendrochronologist/cli.git"
  },
  "bin": {
    "dendrochronologist": "./dist/cli.js"
  },
  "engines": {
    "node": "^12.17.0 || ^14"
  },
  "exports": {
    ".": {
      "import": "./dist/esm/api.mjs",
      "default": "./dist/cjs/api.cjs"
    }
  },
  "files": [
    "dist"
  ],
  "main": "./dist/cjs/api.cjs",
  "prettier": {
    "arrowParens": "always",
    "singleQuote": true
  },
  "c8": {
    "check-coverage": true,
    "reporter": [
      "html",
      "text"
    ],
    "branches": 100,
    "lines": 100,
    "functions": 100,
    "statements": 100
  },
  "tap": {
    "coverage": false,
    "esm": false,
    "ts": false,
    "test-ignore": "test/helpers.ts",
    "node-arg": [
      "--no-warnings",
      "--loader=ts-node/esm"
    ]
  },
  "scripts": {
    "prepare": "npm run build",
    "prepack": "rm -rf dist && npm run build",
    "build": "rollup -c",
    "typecheck": "tsc --noEmit",
    "lint": "eslint . --ignore-path=.gitignore",
    "test": "c8 tap",
    "posttest": "npm run typecheck && npm run lint"
  },
  "devDependencies": {
    "@types/node": "^14.14.14",
    "@types/tap": "^14.10.1",
    "@typescript-eslint/eslint-plugin": "^4.10.0",
    "@typescript-eslint/parser": "^4.10.0",
    "@wessberg/rollup-plugin-ts": "^1.3.8",
    "c8": "^7.3.5",
    "eslint": "^7.15.0",
    "eslint-config-prettier": "^7.0.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^3.3.0",
    "prettier": "^2.2.1",
    "rollup": "^2.35.1",
    "tap": "^14.11.0",
    "ts-node": "^9.1.1",
    "typescript": "^4.1.3"
  },
  "dependencies": {}
}
